extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Cadastro 1';
    - var sidenavStyle = 'sb-sidenav-dark'

append css
    link(href='https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css', rel='stylesheet', crossorigin='anonymous')

block content
    .container-fluid
        include includes/page-header.pug
        .card.mb-4
            .card-body.
                Área de Cadastro 1 (Lista de cadastrados)
        .card.mb-4
            .card-header.d-flex.justify-content-between
                span
                    i.fas.fa-table.mr-1
                    | Tabela de usuários
                a(href='/cadastro2.html' title='Incluir' data-toggle='tooltip')
                    i.fas.fa-plus
            .card-body
                include includes/datatable-exemplo.pug
 
append scripts
    script(src='https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js', crossorigin='anonymous')
    script(src='https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js', crossorigin='anonymous')
    script(src='assets/demo/datatables-demo.js')
    script(src='assets/demo/tooltip.js')